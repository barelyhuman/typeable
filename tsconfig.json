{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "target": "esnext",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "moduleResolution": "Node",
    "emitDeclarationOnly": true,
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}
